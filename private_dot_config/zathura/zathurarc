# Zathura configuration file
# See man `man zathurarc'

map <Return> focus_inputbar ":"
map [fullscreen] <Return> focus_inputbar ":"
# map [index] <Return> focus_inputbar ":"

# Open document in fit-width mode by default
set adjust-open "best-fit"

# One page per row by default
set pages-per-row 1
set n-completion-items 25

#stop at page boundries
set scroll-page-aware "true"
set scroll-full-overlap 0.01
set scroll-step 100

#zoom settings
set zoom-min 10
set guioptions "cs"

set synctex true
set synctex-editor-command 'nvr --remote +"%line" "%file"'
# colors
set font "DejaVuSansMono Nerd Font, Book, 12"
set default-bg "#191919" #"#1B1D1E" #00
set default-fg "#F7F7F6" #01

set statusbar-fg "#B0B0B0" #04
set statusbar-bg "#202020" #01

set inputbar-bg "#151515" #00 currently not used
set inputbar-fg "#FFFFFF" #02

set notification-error-bg "#F92672" #08
set notification-error-fg "#151515" #00

set notification-warning-bg "#F92672" #08
set notification-warning-fg "#151515" #00

set highlight-color "#ffff87" #0A
set highlight-active-color "#62D8F1" #0D

set completion-highlight-fg "#151515" #02
set completion-highlight-bg "#A4E400" #0C

set completion-bg "#303030" #02
set completion-fg "#E0E0E0" #0C

set notification-fg "#A4E400" #0B
set notification-bg "#1B1D11" #00

set recolor "false"
set recolor-lightcolor "#191919" #"#1B1D1E" #00
set recolor-darkcolor "#E0E0E0" #06
set recolor-reverse-video "true"
set recolor-keephue "true"

map @ recolor

set render-loading "false"
set scroll-step 50
unmap f
map f toggle_fullscreen
map [fullscreen] f toggle_fullscreen
